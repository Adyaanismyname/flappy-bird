{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build and Run",
        "type": "shell",
        "command": "g++",
        "args": [
          "${file}",
          "-I/opt/homebrew/Cellar/sfml/2.6.1/include",
          "-o",
          "${fileDirname}/prog",
          "-L/opt/homebrew/Cellar/sfml/2.6.1/lib",
          "-lsfml-graphics",
          "-lsfml-window",
          "-lsfml-system"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": []
      }
    ]
  }